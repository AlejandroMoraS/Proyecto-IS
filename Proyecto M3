#include <stdio.h>
#include <stdlib.h>
int main(void) {
	setbuf(stdout, NULL);
	FILE *Archivo;
	char Plano[1000][1000];
	int E,O;
	int Li=0;
	int Fi=0;
	int i1=0;
	int X1;
	int Y1;
	int fc=0;
	int fs=0;
	int Le,Lo;
	int i,e;

	do{
		char letra; char num;
		int letra1; int num1;
		int F=0;
		E=0;
		puts("Programa del Administrador");
		puts("Que Desea Hacer?");
		puts("1) Crear Plano");
		puts("2) Leer Plano");
		puts("3) Programa de Prueba de Funcionamiento");
		puts("4) Salir");
		scanf("%d",&F);
		switch(F){
			case 1:
				for(fc=0;fc<1000;fc++){
					for(fs=0;fs<1000;fs++){
						Plano[fc][fs]='\0';
					}
				}
				puts("Ingresa el numero de Lugares por Fila");
				scanf("%d",&Li);
				puts("Ingresa el numero de Filas ");
				scanf("%d",&Fi);
				int D1=0,D2=1,D3=3;
				int ic=0;
				for(i1=0;i1<Fi;i1++){
					int i2;
					Plano[D1][0]=201;
					Plano[D3][0]=200;
					for(ic=0;ic<2;ic++){
						Plano[D2][0]=186;
						D2++;
					}
					int S1=1;
					int I1=1;
					for(i2=0;i2<Li;i2++){
						int L1=D1;
						int L2=D2-1;
						int L3=D3;
						for(ic=0;ic<4;ic++){
							Plano[D1][S1]=205;
							S1++;
						}
						for(ic=0;ic<4;ic++){
							Plano[D3][I1]=205;
							I1++;
						}
						if(i2==(Li-1)){
							Plano[L1][S1]=187;
							Plano[L3][I1]=188;
							for(ic=0;ic<2;ic++){
								Plano[L2-1][S1]=186;
								L2++;
							}
						}
						else{
							Plano[L1][S1]=203;
							Plano[L3][I1]=202;
							for(ic=0;ic<2;ic++){
								Plano[L2-1][S1]=186;
								L2++;
							}
						}

						S1=S1+1;
						I1=I1+1;
					}
					D1=D1+5;
					D2=D2+3;
					D3=D3+5;
					X1=S1+1;
					Y1=D1;

			int y=1;
			int b=65;
			int a=49;
			for(Le=0;Le<Fi;Le++){
				int x=2;
				for(Lo=0;Lo<Li;Lo++){
					if(a==58){
						b++;
						a=49;
					}
					Plano[y][x]=b;
					Plano[y][x+1]=a;
					x=x+5;
					a++;
				}
				y=y+5;
				b++;
				a=49;
			}
				}
				for(i=0;i<Y1;i++){
					for(e=0;e<X1;e++){
						printf("%c",Plano[i][e]);
					}
					printf("\n");
				}
				Archivo=fopen("Estacionamiento.txt","w");
				for(i=0;i<Y1;i++){
					for(e=0;e<X1;e++){
						fprintf(Archivo,"%c",Plano[i][e]);
					}
					fprintf(Archivo,"\n");
				}
				fclose(Archivo);
				break;
			case 2:
			 	Archivo = fopen("Estacionamiento.txt","r");

			 	if (Archivo == NULL)
			 		break;

			 	printf("El contenido del archivo de prueba es: \n");
			 	while (feof(Archivo) == 0)
			 	{
			 		fgets(Plano,1000,Archivo);
			 		printf("%s",Plano);
			 	}
			 	fclose(Archivo);
			    break;
			case 3:

				printf("Inserte la letra de la fila en la que desea estacionarse\n");
				fflush(stdin);
				scanf("%c",&letra);

				printf("Inserte el numero de la fila en la que desea estacionarse\n");
				fflush(stdin);
				scanf("%c",&num);

				letra = letra - 65; letra = (letra * 5) + 2;
				num = num - 49; num = (num * 5) + 2;
				letra1=(int)letra;
				num1 = (int)num;

				Plano[letra1][num1]=167;
				Plano[letra1][num1+1]=167;
				for(i=0;i<Y1;i++){
					for(e=0;e<X1;e++){
						printf("%c",Plano[i][e]);
					}
					printf("\n");
				}
				Archivo=fopen("Estacionamiento.txt","w");
				for(i=0;i<Y1;i++){
					for(e=0;e<X1;e++){
						fprintf(Archivo,"%c",Plano[i][e]);
					}
					fprintf(Archivo,"\n");
				}
				fclose(Archivo);

				break;


			case 4:
				puts("Que tenga un buen dia");
				return EXIT_SUCCESS;
				break;
			default:E=1,printf("Elija una opcion permitida\n");
		}
		if(E==0){
			puts ("Desea seguir en el Programa");
			puts ("Ingrese 1 para si.");
			scanf("%i",&O);
		}
	}while(O==1);
	puts("Que tenga un buen dia");
	return EXIT_SUCCESS;
}
